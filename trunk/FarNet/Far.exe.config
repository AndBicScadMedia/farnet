<configuration>
	<runtime>
		<assemblyBinding xmlns="urn:schemas-microsoft-com:asm.v1">
			<!--Location of FarNet.dll needed for FarNetMan.dll-->
			<probing privatePath="FarNet"/>
		</assemblyBinding>
	</runtime>
	<appSettings>
		<!--Location of FarNet modules needed for FarNetMan.dll-->
		<add key="FarNet.Modules" value="%FARHOME%\FarNet\Modules"/>
		<!--Disables internal GUI-->
		<add key="FarNet.DisableGui" value="false"/>
	</appSettings>

	<!--Optional diagnostics section-->
	<system.diagnostics>
		<switches>
			<!--
FarNet trace switch value:
0: Off - does not trace anything; tracing itself depends on listeners
1: Error - traces serious internal errors and module exceptions
2: Warning - traces all errors and warnings; recommended level
3: Info (many) - traces activity, main events and module calls
4: Verbose (huge) - traces all information and numerous events
-->
			<add name="FarNet.Trace" value="2"/>
		</switches>
		<!--
Tracing options and listeners:
Normally a default listener outputs messages into debugger.
You can add more listeners, for example a text file writer.
-->
		<trace autoflush="true" indentsize="4">
			<listeners>
				<add name="FarNet" type="System.Diagnostics.TextWriterTraceListener" initializeData="c:\Far.exe.trace.log"/>
			</listeners>
		</trace>
		<!--
Assert options:
assertuienabled="true|false" logfilename="c:\Far.exe.assert.log".
-->
		<assert assertuienabled="true"/>
	</system.diagnostics>
</configuration>
